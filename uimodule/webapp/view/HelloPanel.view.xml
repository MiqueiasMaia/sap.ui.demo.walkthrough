<mvc:View controllerName="sap.ui.demo.walkthrough.controller.HelloPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Panel id="_IDGenPanel1" headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button icon="sap-icon://world" id="helloDialogButton" text="{i18n>openDialogButtonText}" press="onOpenDialog" class="sapUiSmallMarginEnd"></Button>
            <Button id="helloBnt" class="myCustomButton" text="{i18n>showHelloButtonText}" press="onShowHello" />
            <Input id="workInput" value="{/recipient/name}" valueLiveUpdate="true" width="60%"></Input>
            <FormattedText id="_IDGenText1" htmlText="Hello {/recipient/name}" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"></FormattedText>
        </content>
    </Panel>
</mvc:View>